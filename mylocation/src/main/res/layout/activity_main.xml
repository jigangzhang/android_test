<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mylocation.activities.MainActivity">

    <RelativeLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="35dp">
    <EditText
            android:id="@+id/edit_test"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:hint="hello world!"
            android:background="@drawable/shape_test"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Button
            android:id="@+id/btn_test"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:textColor="@color/color_selector_test"
            android:background="@drawable/layerlist_test"
            android:text="click"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/container_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_above="@+id/line_bottom">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/line_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_blue_bright">
        <TextView
            android:id="@+id/text_tab1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="tab1"
            android:textSize="35sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/shape_test"/>
        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/text_tab2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="tab2"
            android:textSize="35dp"
            android:textAlignment="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/text_tab3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="tab3"
            android:textSize="35dp"
            android:textAlignment="center"/>
    </LinearLayout>

</RelativeLayout>
