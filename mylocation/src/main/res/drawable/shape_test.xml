<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="10dp"/>

    <padding android:bottom="1dp"
        android:top="4dp"/>
    <size android:height="50dp"
          android:width="50dp"/>

    <solid android:color="#786"/>
    <stroke android:color="#999"
        android:width="3dp"
        android:dashWidth="4dp"
        android:dashGap="1dp"/>
    <gradient
        android:type="radial"
        android:centerX="0.5"
        android:centerY="0.5"
        android:startColor="#101"
        android:centerColor="#567"
        android:endColor="#101"
        android:gradientRadius="35dp"/>
</shape>